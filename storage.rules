rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if request.auth != null; // Placeholder: Tighten this later
    }
    
    match /avatars/{userId}/{fileName} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /servers/{serverId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Add size/type validation
    }
  }
}
